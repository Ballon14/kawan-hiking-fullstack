[Unit]
Description=Kawan Hiking Next.js Application
After=network.target

[Service]
Type=simple
User=www-data
Group=www-data
WorkingDirectory=/var/www/kawan-hiking
ExecStart=/usr/bin/npm start
Restart=on-failure
RestartSec=10
StandardOutput=syslog
StandardError=syslog
SyslogIdentifier=kawan-hiking
Environment=NODE_ENV=production
Environment=PORT=3000

[Install]
WantedBy=multi-user.target
